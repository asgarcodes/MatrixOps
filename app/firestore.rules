rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Profiles: Everyone can see profiles, but only the owner can edit
    match /profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Events: Everyone can read. Only authenticated users can create.
    // Only organizers can update/delete their own events.
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.organizer_id == request.auth.uid;
    }

    // RSVPs: Users can see their own. Organizers can see all for their events.
    match /rsvps/{rsvpId} {
      allow read: if request.auth != null && (
        resource.data.user_id == request.auth.uid || 
        get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.organizer_id == request.auth.uid
      );
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      allow update: if request.auth != null && (
        // User can update some fields (like status?) or Organizer can update (check-in)
        get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.organizer_id == request.auth.uid
      );
    }

    // Broadcasts: Everyone can read. Only event organizers can create.
    match /broadcasts/{broadcastId} {
      allow read: if true;
      allow create: if request.auth != null && 
        get(/databases/$(database)/documents/events/$(request.resource.data.event_id)).data.user_id == request.auth.uid;
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/events/$(resource.data.event_id)).data.user_id == request.auth.uid;
    }
  }
}
